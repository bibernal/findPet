@model findPet.Models.telaPublicacaoModel

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro Usuario</title>
    <link rel="stylesheet" href="/css/site.css">
</head>
<body>
    <div class="container">
        <h1>Cadastre-se</h1>
        
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="success-message">@TempData["SuccessMessage"]</div>
        }

        <form asp-action="Create" asp-controller="telaPublicacaoModel" method="post">
            <div class="form-group">
                <label for="Nome">Nome</label>
                <input type="text" id="Nome" name="Nome" value="@Model?.Nome" required />
            </div>
            
            <div class="form-group">
                <label for="Raca">E-mail</label>
                <input type="text" id="Email" name="Raca" value="@Model?.Raca" required />
            </div>
            
            <div class="form-group">
                <label for="Cor">Senha</label>
                <input type="text" id="Cor" name="Senha" value="@Model?.Cor" required />
            </div>
            
            <div class="form-group">
                <label for="Cor">CPF</label>
                <input type="text" id="Cor" name="CPF" value="@Model?.Cor" required />
            </div>
            
            <div class="form-group">
                <label for="Cor">Telefone</label>
                <input type="text" id="Cor" name="Telefone" value="@Model?.Cor" required />
            </div>

            <div class="form-group">
                <label for="DataDesaparecimento">Data de Nascimento</label>
                <input type="date" id="DataDesaparecimento" name="DataNascimento" value="@Model?.DataDesaparecimento.ToString("yyyy-MM-dd")" required />
            </div>
            
            <button type="submit">Proximo</button>
        </form>
    </div>
</body>
</html>
